<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrinalraj.envelope.activities.WritePost">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbar"
        android:id="@+id/postActionbar">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_navigation_arrow_back_inverted"
            android:id="@+id/backBtn"/>

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/postActionbar"
        android:id="@+id/emptyView"
        android:background="@color/white_mute"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/comment_bg"
        android:id="@+id/fakeEdit"
        android:layout_below="@+id/emptyView">
        <EditText
            android:layout_below="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:background="@drawable/comment_bg"
            android:hint="Start Writing here"
            android:padding="20dp"
            android:id="@+id/post" />
    </LinearLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:layout_below="@+id/fakeEdit"
        android:lineSpacingExtra="6dp"
        />




</RelativeLayout>
